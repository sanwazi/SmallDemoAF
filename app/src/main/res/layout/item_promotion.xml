<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_promotion_width"
    android:layout_height="@dimen/item_promotion_height"
    android:clipChildren="false"
    android:elevation="@dimen/promotion_elevation"
    >

    <ImageView
        android:id="@+id/item_promotion_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/promotion_placeholder"
        android:scaleType="centerCrop"
        />

    <jumbo.com.smalldemoaf.custom_views.LobsterTextView
        android:id="@+id/item_promotion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin_half"
        android:paddingRight="@dimen/activity_horizontal_margin_half"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#AA000000"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#FFF"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        tools:text="Avengers"
        android:textSize="20sp"
        />

</FrameLayout>