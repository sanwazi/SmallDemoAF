<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_primary</item>
    </style>

    <style name="TransAppTheme" parent="AppTheme"/>

    <declare-styleable name="CardView">
        <attr name="cardBackgroundColor" format = "color"/>
        <attr name="cardCornerRadius" format="dimension"/>
    </declare-styleable>

    <style name="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="CardView.Light">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="promotionActivity" />

    <style name="MaterialPromotionHeaderTextView" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialPromotionDetailField" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="MaterialPromotionsReviewTextView" parent="MaterialPromotionDetailField">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">100dp</item>
    </style>

    <style name="MaterialPromotionFabLabel" />


    <style name="MaterialPromotionDetailConfirmation">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>
